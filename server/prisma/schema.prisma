// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Пользователь (Фрилансер)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Клиент (Заказчик)
model Client {
  id        Int       @id @default(autoincrement())
  name      String    // Название компании или имя
  email     String?
  phone     String?
  projects  Project[] // Связь: У клиента много проектов
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// 3. Проект
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("NEW") // NEW, IN_PROGRESS, COMPLETED, PAID
  price       Float?
  
  clientId    Int
  client      Client   @relation(fields: [clientId], references: [id]) // Связь с клиентом
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
